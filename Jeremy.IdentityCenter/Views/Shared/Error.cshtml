@using IdentityServer4.Extensions
@model Jeremy.IdentityCenter.Business.Models.Home.ErrorViewModel

@{
    var error = Model?.Error?.Error;
    var errorDescription = Model?.Error?.ErrorDescription;
    var request_id = Model?.Error?.RequestId;

    if (!Context.User.IsAuthenticated())
    {
        Layout = "_BlankLayout";
    }
}

<div class="error-page">
    <div class="lead mb-4">
        <h1 class="text-center">Error</h1>
    </div>

    <div class="row justify-content-center text-center">
        <div class="col-sm-6">
            <div class="alert alert-danger">
                Sorry, there was an error

                @if (error != null)
                {
                    <strong>
                        <em>
                            : @error
                        </em>
                    </strong>

                    if (errorDescription != null)
                    {
                        <div>@errorDescription</div>
                    }
                }
            </div>

            @if (request_id != null)
            {
                <div class="request-id">Request Id: @request_id</div>
            }
        </div>
    </div>
</div>
