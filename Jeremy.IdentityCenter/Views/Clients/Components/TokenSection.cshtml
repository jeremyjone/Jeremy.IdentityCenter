@model Jeremy.IdentityCenter.Business.Models.Clients.ClientViewModel

<div class="card mt-3">
    <h5 class="card-header">客户端</h5>
    <div class="card-body">
        <!--Input - number -->
        <div class="form-group row">
            <label-name asp-for="IdentityTokenLifetime" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="IdentityTokenLifetime">
            </div>
        </div>

        <!--Select with tags-->
        <div class="form-group row">
            <label-name asp-for="AllowedIdentityTokenSigningAlgorithms" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <picker id="AllowedIdentityTokenSigningAlgorithmsItems" multiple-select="true" min-search-text="2"
                        selected-items="@Model.AllowedIdentityTokenSigningAlgorithms"
                        url="@Url.Action("SigningAlgorithms","Clients")?algorithm">
                </picker>
            </div>
        </div>

        <!--Checkbox-->
        <div class="form-group row">
            <label-name asp-for="AlwaysIncludeUserClaimsInIdToken" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="AlwaysIncludeUserClaimsInIdToken" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Input - number -->
        <div class="form-group row">
            <label-name asp-for="AccessTokenLifetime" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="AccessTokenLifetime">
            </div>
        </div>

        <!--Select-->
        <div class="form-group row">
            <label-name asp-for="AccessTokenTypes" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <select asp-for="AccessTokenType" asp-items="@(new SelectList(Model.AccessTokenTypes,"Id","Text"))" class="form-control single-select"></select>
            </div>
        </div>

        <!--Input - number -->
        <div class="form-group row">
            <label-name asp-for="AuthorizationCodeLifetime" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="AuthorizationCodeLifetime">
            </div>
        </div>

        <!--Input - number-->
        <div class="form-group row">
            <label-name asp-for="AbsoluteRefreshTokenLifetime" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="AbsoluteRefreshTokenLifetime">
            </div>
        </div>

        <!--Input - number -->
        <div class="form-group row">
            <label-name asp-for="SlidingRefreshTokenLifetime" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="SlidingRefreshTokenLifetime">
            </div>
        </div>

        <!--Checkbox-->
        <div class="form-group row">
            <label-name asp-for="UpdateAccessTokenClaimsOnRefresh" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="UpdateAccessTokenClaimsOnRefresh" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Select-->
        <div class="form-group row">
            <label-name asp-for="RefreshTokenUsage" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <select asp-for="RefreshTokenUsage" asp-items="@(new SelectList(Model.RefreshTokenUsages,"Id","Text"))" class="form-control single-select"></select>
            </div>
        </div>

        <!--Select-->
        <div class="form-group row">
            <label-name asp-for="RefreshTokenExpiration" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <select asp-for="RefreshTokenExpiration" asp-items="@(new SelectList(Model.RefreshTokenExpirations,"Id","Text"))" class="form-control single-select"></select>
            </div>
        </div>

        <!--Select with tags-->
        <div class="form-group row">
            <label-name asp-for="AllowedCorsOrigins" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <picker id="AllowedCorsOriginsItems" multiple-select="true" min-search-text="2" selected-items="@Model.AllowedCorsOrigins">
                </picker>
            </div>
        </div>



        <!--Checkbox-->
        <div class="form-group row">
            <label-name asp-for="IncludeJwtId" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="IncludeJwtId" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Input - text -->
        <div class="form-group row">
            <label-name asp-for="PairWiseSubjectSalt" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="PairWiseSubjectSalt">
            </div>
        </div>

        <!--Input - text -->
        <div class="form-group row">
            <label-name asp-for="ClientClaimsPrefix" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="ClientClaimsPrefix">
            </div>
        </div>

        <!--Checkbox-->
        <div class="form-group row">
            <label-name asp-for="AlwaysSendClientClaims" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="AlwaysSendClientClaims" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Button-->
        <div class="form-group row">
            <label-name asp-for="Claims" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <a asp-action="ClientClaims" asp-route-id="@Model.Id" target="_blank" class="btn btn-primary">管理客户端声明</a>
            </div>
        </div>
    </div>
</div>
