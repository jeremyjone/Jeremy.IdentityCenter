@model Jeremy.IdentityCenter.Business.Models.Clients.ClientViewModel

<div class="card mt-3">
    <h5 class="card-header">客户端</h5>
    <div class="card-body">
        <!--Input - text -->
        <div class="form-group row">
            <label-name asp-for="FrontChannelLogoutUri" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="FrontChannelLogoutUri">
            </div>
        </div>

        <!--Checkbox-->
        <div class="form-group row">
            <label-name asp-for="FrontChannelLogoutSessionRequired" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="FrontChannelLogoutSessionRequired" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Input - text -->
        <div class="form-group row">
            <label-name asp-for="BackChannelLogoutUri" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="BackChannelLogoutUri">
            </div>
        </div>

        <!--Checkbox-->
        <div class="form-group row">
            <label-name asp-for="BackChannelLogoutSessionRequired" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="BackChannelLogoutSessionRequired" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Checkbox-->
        <div class="form-group row">
            <label-name asp-for="EnableLocalLogin" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="EnableLocalLogin" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Select with tags-->
        <div class="form-group row">
            <label-name asp-for="PostLogoutRedirectUris" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <picker id="PostLogoutRedirectUrisItems" multiple-select="true" min-search-text="2" selected-items="@Model.PostLogoutRedirectUris">
                </picker>
            </div>
        </div>

        <!--Select with tags-->
        <div class="form-group row">
            <label-name asp-for="IdentityProviderRestrictions" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <picker id="IdentityProviderRestrictionsItems" multiple-select="true" min-search-text="2" selected-items="@Model.IdentityProviderRestrictions">
                </picker>
            </div>
        </div>

        <!--Input - number -->
        <div class="form-group row">
            <label-name asp-for="UserSsoLifetime" class="col-sm-3 col-form-label"></label-name>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="UserSsoLifetime">
            </div>
        </div>
    </div>
</div>
