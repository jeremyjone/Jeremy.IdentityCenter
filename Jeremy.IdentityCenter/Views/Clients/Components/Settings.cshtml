@model Jeremy.IdentityCenter.Business.Models.Clients.ClientViewModel

<div class="row">
    <div class="col-md-12">
        <h3>设置</h3>
        <nav>
            <div class="nav nav-tabs mt-3" id="nav-tab" role="tablist">
                <a class="nav-item nav-link @(ViewBag.Setting == "name" ? "active": "")" id="nav-name-tab" data-toggle="tab" href="#nav-name" role="tab" aria-controls="nav-name" aria-selected="true">名称</a>
                @if (Model.Id != 0)
                {
                    <a class="nav-item nav-link @(ViewBag.Setting == "basics" ? "active": "")" id="nav-basics-tab" data-toggle="tab" href="#nav-basics" role="tab" aria-controls="nav-basics" aria-selected="false">基础</a>
                    <a class="nav-item nav-link @(ViewBag.Setting == "auth" ? "active": "")" id="nav-authentication-tab" data-toggle="tab" href="#nav-authentication" role="tab" aria-controls="nav-authentication" aria-selected="false">认证/注销</a>
                    <a class="nav-item nav-link @(ViewBag.Setting == "token" ? "active": "")" id="nav-token-tab" data-toggle="tab" href="#nav-token" role="tab" aria-controls="nav-token" aria-selected="false">令牌</a>
                    <a class="nav-item nav-link @(ViewBag.Setting == "consent" ? "active": "")" id="nav-consent-tab" data-toggle="tab" href="#nav-consent" role="tab" aria-controls="nav-consent" aria-selected="false">同意屏幕</a>
                    <a class="nav-item nav-link @(ViewBag.Setting == "device" ? "active": "")" id="nav-deviceflow-tab" data-toggle="tab" href="#nav-deviceflow" role="tab" aria-controls="nav-deviceflow" aria-selected="false">设备流程</a>}
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane @(ViewBag.Setting == "name" ? "show active": "")" id="nav-name" role="tabpanel" aria-labelledby="nav-name-tab">
                @await Html.PartialAsync("Components/NameSection")
            </div>

            @if (Model.Id != 0)
            {
                <div class="tab-pane @(ViewBag.Setting == "basics" ? "show active": "")" id="nav-basics" role="tabpanel" aria-labelledby="nav-basics-tab">
                    @await Html.PartialAsync("Components/BasicsSection")
                </div>

                <div class="tab-pane @(ViewBag.Setting == "auth" ? "show active": "")" id="nav-authentication" role="tabpanel" aria-labelledby="nav-authentication-tab">
                    @await Html.PartialAsync("Components/AuthenticationSection")
                </div>
                <div class="tab-pane @(ViewBag.Setting == "token" ? "show active": "")" id="nav-token" role="tabpanel" aria-labelledby="nav-token-tab">
                    @await Html.PartialAsync("Components/TokenSection")
                </div>
                <div class="tab-pane @(ViewBag.Setting == "consent" ? "show active": "")" id="nav-consent" role="tabpanel" aria-labelledby="nav-consent-tab">
                    @await Html.PartialAsync("Components/ConsentSection")
                </div>
                <div class="tab-pane @(ViewBag.Setting == "device" ? "show active": "")" id="nav-deviceflow" role="tabpanel" aria-labelledby="nav-deviceflow-tab">
                    @await Html.PartialAsync("Components/DeviceFlowSection")
                </div>}
        </div>
    </div>
</div>
