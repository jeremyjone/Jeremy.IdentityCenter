@model Jeremy.IdentityCenter.Business.Models.Clients.ClientClaimsViewModel
@{ ViewBag.Title = "客户端声明"; }

<form asp-controller="Clients" asp-action="ClientClaimDelete" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Clients" asp-action="Index">客户端列表</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Clients" asp-action="Client" asp-route-id="@Model.ClientId">@Model.ClientName</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Clients" asp-action="ClientClaims" asp-route-id="@Model.ClientId">客户端声明</a></li>
                    <li class="breadcrumb-item active" aria-current="page">删除客户端声明</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <h3>客户端声明</h3>

            <!--Hidden -->
            <input type="hidden" asp-for="ClientId" />
            <input type="hidden" asp-for="ClientClaimId" />


            <div class="card mt-3">
                <h5 class="card-header">删除客户端声明</h5>
                <div class="card-body">

                    <!--Input - text -->
                    <div class="form-group row">
                        <label-name asp-for="Type" class="col-sm-3 col-form-label"></label-name>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Type">
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label-name asp-for="Value" class="col-sm-3 col-form-label"></label-name>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Value">
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">删除</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>