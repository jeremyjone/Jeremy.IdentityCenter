@model Jeremy.IdentityCenter.Business.Models.Clients.ClientSecretsViewModel
@{ ViewData["Title"] = "删除客户端秘钥"; }

<form asp-controller="Clients" asp-action="ClientSecretDelete" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Clients" asp-action="Index">客户端列表</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Clients" asp-action="Client" asp-route-id="@Model.ClientId">@Model.ClientName</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Clients" asp-action="ClientSecrets" asp-route-id="@Model.ClientId">客户端秘钥</a></li>
                    <li class="breadcrumb-item active" aria-current="page">删除客户端秘钥</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <h3>删除客户端秘钥</h3>

            <!--Hidden -->
            <input type="hidden" asp-for="ClientSecretId" />

            <!--Hidden -->
            <input type="hidden" asp-for="ClientId" />

            <div class="card mt-3">
                <h5 class="card-header">删除客户端秘钥</h5>
                <div class="card-body">
                    <!--Input - text -->
                    <div class="form-group row">
                        <label-name asp-for="Type" class="col-sm-3 col-form-label">
                        </label-name>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Type">
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label-name asp-for="Description" class="col-sm-3 col-form-label">
                        </label-name>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Description">
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">删除客户端秘钥</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
