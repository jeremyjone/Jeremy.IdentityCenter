@model Jeremy.IdentityCenter.Business.Models.IdentityResource.IdentityResourceViewModel
@{ ViewBag.Title = "身份资源"; }

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="IdentityResource" asp-action="Index">身份资源列表</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>

    <div class="col-12">
        <h2>身份资源</h2>
    </div>
</div>

<form asp-action="IdentityResource" method="post" id="identity-resource-form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <!--Hidden -->
    <input type="hidden" asp-for="Id" />

    <div class="card mt-3">
        <h5 class="card-header">身份资源</h5>
        <div class="card-body">
            <!--Input - text -->
            <div class="form-group row">
                <label-name asp-for="Name" class="col-sm-3 col-form-label">
                </label-name>
                <div class="col-sm-9">
                    <input type="text" required class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <!--Input - text -->
            <div class="form-group row">
                <label-name asp-for="DisplayName" class="col-sm-3 col-form-label">
                </label-name>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="DisplayName">
                </div>
            </div>

            <!--Input - text -->
            <div class="form-group row">
                <label-name asp-for="Description" class="col-sm-3 col-form-label">
                </label-name>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Description">
                </div>
            </div>

            <!--Checkbox-->
            <div class="form-group row">
                <label-name asp-for="Enabled" class="col-sm-3 col-form-label">
                </label-name>
                <div class="col-sm-9">
                    <toggle-button>
                        <input asp-for="Enabled" type="checkbox">
                    </toggle-button>
                </div>
            </div>

            <!--Checkbox-->
            <div class="form-group row">
                <label-name asp-for="ShowInDiscoveryDocument" class="col-sm-3 col-form-label">
                </label-name>
                <div class="col-sm-9">
                    <toggle-button>
                        <input asp-for="ShowInDiscoveryDocument" type="checkbox">
                    </toggle-button>
                </div>
            </div>

            <!--Checkbox-->
            <div class="form-group row">
                <label-name asp-for="Required" class="col-sm-3 col-form-label">
                </label-name>
                <div class="col-sm-9">
                    <toggle-button>
                        <input asp-for="Required" type="checkbox">
                    </toggle-button>
                </div>
            </div>

            <!--Checkbox-->
            <div class="form-group row">
                <label-name asp-for="Emphasize" class="col-sm-3 col-form-label">
                </label-name>
                <div class="col-sm-9">
                    <toggle-button>
                        <input asp-for="Emphasize" type="checkbox">
                    </toggle-button>
                </div>
            </div>

            <!--Select with tags-->
            <div class="form-group row">
                <label-name asp-for="UserClaims" class="col-sm-3 col-form-label">
                </label-name>
                <div class="col-sm-9">
                    <picker id="UserClaimsItems"
                            multiple-select="true"
                            min-search-text="2"
                            selected-items="@Model.UserClaims"
                            url="@Url.Action("Claims","Clients")?claim">
                    </picker>
                </div>
            </div>

            @if (Model.Id != 0)
            {<!--Button-->
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">
                                        身份资源属性
                                    </label>
                                    <div class="col-sm-9">
                                        <a asp-action="Properties" asp-route-id="@Model.Id" class="btn btn-primary">管理身份资源属性</a>
                                    </div>
                                </div>}

            <!--Button-->
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">
                </label>
                <div class="col-sm-9">
                    <button type="submit" asp-action="IdentityResource" id="identity-resource-save-button" class="btn btn-primary">保存</button>
                    @if (Model.Id != 0)
                    {
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">删除</a>}
                </div>
            </div>
        </div>
    </div>

</form>

@section scripts
	{
    <script>
        $(function () {

            //Disable enter for this form
            FormMvc.disableEnter($('#identity-resource-form'));
        });</script>
}