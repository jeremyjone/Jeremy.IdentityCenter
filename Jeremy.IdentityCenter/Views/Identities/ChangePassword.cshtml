@model Jeremy.IdentityCenter.Business.Models.Identity.ChangePasswordViewModel
@{
    ViewData["Title"] = "修改密码";
}

<form asp-controller="Identities" asp-action="ChangePassword" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Identities" asp-action="Users">用户列表</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Identities" asp-action="UserInfo" asp-route-id="@Model.UserId">@Model.Username</a></li>
                    <li class="breadcrumb-item active" aria-current="page">修改密码</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <h3>修改密码</h3>

            <div asp-validation-summary="All" class="text-danger"></div>

            <!--Hidden -->
            <input type="hidden" asp-for="UserId" />

            <div class="card mt-3">
                <h5 class="card-header">修改密码</h5>
                <div class="card-body">

                    <!--Input - text -->
                    <div class="form-group row">
                        <label-name asp-for="Username" class="col-sm-3 col-form-label"></label-name>
                        <div class="col-sm-9">
                            <input type="hidden" class="form-control" asp-for="Username">
                            <h4>@Model.Username</h4>
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label-name asp-for="Password" class="col-sm-3 col-form-label"></label-name>
                        <div class="col-sm-9">
                            <input type="password" required class="form-control" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label-name  asp-for="ConfirmPassword" class="col-sm-3 col-form-label">
                        </label-name>
                        <div class="col-sm-9">
                            <input type="password" required class="form-control" asp-for="ConfirmPassword">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">确认修改</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>