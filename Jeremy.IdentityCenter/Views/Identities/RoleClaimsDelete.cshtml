@model Jeremy.IdentityCenter.Business.Models.Identity.RoleClaimsViewModel
@{ ViewData["Title"] = "删除角色声明"; }

<form asp-controller="Identities" asp-action="RoleClaimsDelete" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Identities" asp-action="Roles">角色列表</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Identities" asp-action="Role" asp-route-id="@Model.RoleId">@Model.RoleName</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Identities" asp-action="RoleClaims" asp-route-id="@Model.RoleId">角色声明</a></li>
                    <li class="breadcrumb-item active" aria-current="page">删除角色声明</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <h3>删除角色声明</h3>

            <!--Hidden -->
            <input type="hidden" asp-for="RoleId" />

            <!--Hidden -->
            <input type="hidden" asp-for="ClaimId" />
            <div class="card mt-3">
                <h5 class="card-header">删除角色声明</h5>
                <div class="card-body">

                    <!--Input - text -->
                    <div class="form-group row">
                        <label-name asp-for="ClaimType" class="col-sm-3 col-form-label"></label-name>
                        <div class="col-sm-9">
                            <input type="text" disabled="disabled" class="form-control" asp-for="ClaimType">
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label-name asp-for="ClaimValue" class="col-sm-3 col-form-label"></label-name>
                        <div class="col-sm-9">
                            <input type="text" disabled="disabled" class="form-control" asp-for="ClaimValue">
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">删除</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>