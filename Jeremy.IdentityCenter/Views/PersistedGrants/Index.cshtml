@using Jeremy.IdentityCenter.Business.Models
@model Jeremy.IdentityCenter.Business.Models.PersistedGrants.PersistedGrantsViewModel
@{
    ViewBag.Title = "持久授权";
}

<div class="row">
    <div class="col-12 mb-3 text-center mt-1">
        <h2><span class="oi oi-key" title="Persisted Grants" aria-hidden="true"></span>持久授权</h2>
    </div>
</div>

<div class="row">
    <div class="col-12 mb-3">
        @await Html.PartialAsync("Search", new Search { Action = "Index", Controller = "PersistedGrants" })
    </div>
</div>

<div class="row table-responsive">
    <div class="col-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>主体标识</th>
                    <th>主体名称</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var persistedGrant in Model.PersistedGrants)
                {
                    <tr>
                        <td>@persistedGrant.SubjectId</td>
                        <td>@persistedGrant.SubjectName</td>
                        <td class="align-middle text-right"><a class="btn btn-primary" asp-action="PersistedGrant" asp-route-id="@persistedGrant.SubjectId">详情</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @await Html.PartialAsync("Pagination", new Pagination { Action = "Index", PageSize = Model.PageSize, TotalCount = Model.TotalCount })
    </div>
</div>