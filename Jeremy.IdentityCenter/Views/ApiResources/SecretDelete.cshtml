@model Jeremy.IdentityCenter.Business.Models.ApiResources.ApiResourceSecretsViewModel
@{ 
    ViewBag.Title = "删除 Api 秘钥";
}

<form asp-controller="ApiResources" asp-action="SecretDelete" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="ApiResources" asp-action="Index">Api 列表</a></li>
                    <li class="breadcrumb-item"><a asp-controller="ApiResources" asp-action="Resource" asp-route-id="@Model.ApiResourceId">@Model.ApiResourceName</a></li>
                    <li class="breadcrumb-item"><a asp-controller="ApiResources" asp-action="Secrets" asp-route-id="@Model.ApiResourceId"> Api 秘钥</a></li>
                    <li class="breadcrumb-item active" aria-current="page">删除 Api 秘钥</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <h3>删除 Api 秘钥</h3>

            <!--Hidden -->
            <input type="hidden" asp-for="ApiSecretId" />

            <!--Hidden -->
            <input type="hidden" asp-for="ApiResourceId" />

            <div class="card mt-3">
                <h5 class="card-header">删除 Api 秘钥</h5>
                <div class="card-body">
                    <!--Input - text -->
                    <div class="form-group row">
                            <label-name asp-for="Type" class="col-sm-3 col-form-label"></label-name>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Type">
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                            <label-name asp-for="Description" class="col-sm-3 col-form-label"></label-name>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Description">
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">删除 Api 秘钥</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
