@model Jeremy.IdentityCenter.Business.Models.ApiScopes.ApiScopeViewModel
@{
    ViewBag.Title = "删除 Api 作用域";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="ApiScopes" asp-action="Index">Api 作用域列表</a></li>
                <li class="breadcrumb-item"><a asp-controller="ApiScopes" asp-action="Scope" asp-route-id="@Model.Id">@Model.Name</a></li>
                <li class="breadcrumb-item active" aria-current="page">删除 Api 作用域</li>
            </ol>
        </nav>
    </div>

    <div class="col-12">
        <h2>删除 Api 作用域</h2>
    </div>
</div>

<form asp-action="Delete" method="post">
    <!--Hidden -->
    <input type="hidden" asp-for="Id" />

    <div class="card mt-3">
        <h5 class="card-header">删除 Api 作用域</h5>
        <div class="card-body">

            <!--Input - text -->
            <div class="form-group row">
                <label-name asp-for="Name" class="col-sm-3 col-form-label"></label-name>
                <div class="col-sm-9">
                    <input type="text" class="form-control" disabled="disabled" asp-for="Name">
                </div>
            </div>

            <!--Button-->
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">
                </label>
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-danger">删除</button>
                </div>
            </div>
        </div>
    </div>
</form>