@model Jeremy.IdentityCenter.Business.Models.ApiScopes.ApiScopeViewModel
@{ ViewBag.Title = "Api 作用域"; }

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">

                @if (Model.Id != 0)
                {
    <li class="breadcrumb-item"><a asp-controller="ApiScopes" asp-action="Index">Api 作用域列表</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
 }
                else
                {
    <li class="breadcrumb-item"><a asp-controller="ApiScopes" asp-action="Index">Api 作用域列表</a></li>
}
            </ol>
        </nav>
    </div>

    <div class="col-12">
        <h2>Api 作用域</h2>
    </div>
</div>

<form asp-action="Scope" id="api-scope-form" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <!--Hidden -->
    <input type="hidden" asp-for="Id" />

    <div class="card mt-3">
        <h5 class="card-header">Api 作用域</h5>
        <div class="card-body">
            <!--Input - text -->
            <div class="form-group row">
                <label-name asp-for="Name" class="col-sm-3 col-form-label"></label-name>
                <div class="col-sm-9">
                    <input type="text" required class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <!--Input - text -->
            <div class="form-group row">
                <label-name asp-for="DisplayName" class="col-sm-3 col-form-label"></label-name>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="DisplayName">
                </div>
            </div>

            <!--Input - text -->
            <div class="form-group row">
                <label-name asp-for="Description" class="col-sm-3 col-form-label"></label-name>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Description">
                </div>
            </div>

            <!--Checkbox-->
            <div class="form-group row">
                <label-name asp-for="Enabled" class="col-sm-3 col-form-label"></label-name>
                <div class="col-sm-9">
                    <toggle-button>
                        <input asp-for="Enabled" type="checkbox">
                    </toggle-button>
                </div>
            </div>

            <!--Checkbox-->
            <div class="form-group row">
                <label-name asp-for="ShowInDiscoveryDocument" class="col-sm-3 col-form-label"></label-name>
                <div class="col-sm-9">
                    <toggle-button>
                        <input asp-for="ShowInDiscoveryDocument" type="checkbox">
                    </toggle-button>
                </div>
            </div>

            <!--Checkbox-->
            <div class="form-group row">
                <label-name asp-for="Required" class="col-sm-3 col-form-label"></label-name>
                <div class="col-sm-9">
                    <toggle-button>
                        <input asp-for="Required" type="checkbox">
                    </toggle-button>
                </div>
            </div>

            <!--Checkbox-->
            <div class="form-group row">
                <label-name asp-for="Emphasize" class="col-sm-3 col-form-label"></label-name>
                <div class="col-sm-9">
                    <toggle-button>
                        <input asp-for="Emphasize" type="checkbox">
                    </toggle-button>
                </div>
            </div>

            @if (Model.Id != 0)
            {<!--Button-->
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">属性</label>
                                    <div class="col-sm-9">
                                        <a asp-action="Properties" asp-route-id="@Model.Id" class="btn btn-primary">管理属性</a>
                                    </div>
                                </div>}

            <!--Select with tags-->
            <div class="form-group row">
                <label-name asp-for="UserClaims" class="col-sm-3 col-form-label"></label-name>
                <div class="col-sm-9">
                    <picker id="UserClaimsItems" multiple-select="true" min-search-text="2"
                            selected-items="@Model.UserClaims" url="@Url.Action("Claims","Clients")?claim">
                    </picker>
                </div>
            </div>

            <!--Button-->
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">
                </label>
                <div class="col-sm-9">
                    <button type="submit" id="api-scope-save-button" class="btn btn-primary">@(Model.Id == 0 ? "创建" : "保存")</button>
                </div>
            </div>
        </div>
    </div>

</form>

@section scripts
	{
    <script>
        $(function () {
            //Disable enter for this form
            FormMvc.disableEnter($('#api-scope-form'));
        });</script>
}
